{% extends 'base.html.twig' %}

{% block title %}Création d'un compte candidat{% endblock %}

{% block body %}
    <section id="register">
        <h1>Créer votre compte candidat</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstName, { label: 'Prénom :' }) }}
            {{ form_row(registrationForm.lastName, { label: 'Nom :' }) }}
            {{ form_row(registrationForm.email, { label: 'Email :' }) }}
            {{ form_row(registrationForm.phone, { label: 'Numéro de téléphone :' }) }}
            {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe :' }) }}
            {# {{ form_row(registrationForm.agreeTerms) }} #}

            <button type="submit" class="btn">Créer</button>
        {{ form_end(registrationForm) }}
        <p>Déjà un compte ? </p><a href="/login">Connectez-vous</a>
    </section>
{% endblock %}
